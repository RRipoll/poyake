<?page title="Home Page" contentType="text/html;charset=UTF-8"?>
<zk xmlns:w="http://www.zkoss.org/2005/zk/client"
	xmlns:n="http://www.zkoss.org/2005/zk/native"
	xmlns:h="http://www.w3.org/1999/xhtml">

	<window width="90%"  closable="true" title="Create" style="overflow:auto" border="normal" maximizable="true">
		<groupbox title="Event general information">
			<div id="FIELD_LIST" />
			<vlayout>
				<h:table>
					<h:tr>
						<h:td>
							<label value="Event Name" />
						</h:td>
						<h:td>
							<textbox multiline="true" width="500px" height="100px" info="@MT(field=EVENTDEFINITION.EVENTNAME)"/>
						</h:td>
					</h:tr>
					<h:tr>
						<h:td>
							<label value="Description" />
						</h:td>
						<h:td>
							<textbox multiline="true" width="500px" height="100px" info="@MT(field=EVENTDEFINITION.DESCRIPTION)"/>
						</h:td>
					</h:tr>
					<h:tr>
						<h:td>
							<label value="Folder Parent" />
						</h:td>
						<h:td>
							<textbox id="folderlabel" width="100%" disabled="true" />
							<intbox id="folderid" info="@MT(field=EVENTDEFINITION.FOLDERID)" width="100%" visible="false" />

						</h:td>
					</h:tr>
					<h:tr>
						<h:td>
							<label value="Event Type" />
						</h:td>
						<h:td>
							<combobox id="eventType" info="@MT(field=EVENTDEFINITION.EVENTTYPEID)">
								<comboitem label="Rest Event" value="1" />
								<comboitem label="Job Event" value="2" />
								<comboitem label="File Event" value="3" />
								<comboitem label="Rest Job Event" value="4" />
							</combobox>
						</h:td>
					</h:tr>
					
					<h:tr >
						<hbox width="100%"  id="trhttpMethod" visible="false">
						<h:td>
							<label value="Http Method" />
						<space/><space/><space/>
						</h:td>
						<h:td>
							<radiogroup id="httpMethod"  >
								<radio id="GET" checked="true"/><label>GET</label>
								<radio id="POST" /><label>POST</label>
								<radio id="PUT" /><label>PUT</label>
								<radio id="DELETE" /><label>DELETE</label>
							</radiogroup>
							
						</h:td>
					</hbox>

					</h:tr>
					
					<h:tr>
						<h:td>
						</h:td>
						<h:td>
						   
						</h:td>
					</h:tr>
				</h:table>
			</vlayout>
		</groupbox>
		<groupbox title="Add Parameters">
			<hlayout  >
				<label value="Label Name" /><textbox id="newlabelname"  width="300px" />
				<space/>
				<label value="Type" /><combobox id="newType" />
				<space/>
				<checkbox label="Input"  id="ISINPUTPARAMETER"/>
				<space/>
				<checkbox label="Output" id="ISOUTPUTPARAMETER"/>
			
				<button id="ADD_PAREMETERS" label="Add Paramenter" />
				<button id="RESET_PAREMETERS" label="Reset Parameters" />
			</hlayout>
		</groupbox>
		<groupbox title="Paramenters">
			<div  >
				<div id="EVENT_PARAMENTER_AREA">
				</div>
			</div>
		</groupbox>
		<hbox width="100%" pack="right">
			<space/>
			<button id="SAVE_BUTTON" label="Save" />
		</hbox>
	</window>
</zk>